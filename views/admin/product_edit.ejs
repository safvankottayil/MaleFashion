if(productBrand==''){
  seterror(brand,'This field requred')
  e.preventDefault()
}else {
  setSuccess(brand)
}
////////PRICE/////
if(productPrice==''){
  seterror(price,'This field requred')
  e.preventDefault()
}else {
  setSuccess(price)
}
///////DISCOUNT////
if(productDiscount==''){
  seterror(discount,'This field requred')
  e.preventDefault()
}else {
  setSuccess(discount)
}
/////DISCRIPTION/////
if(productDiscription==''){
  seterror(description,'This field requred')
  e.preventDefault()
}else {
  setSuccess(description)
}
/////
if(productfile==''){
  seterror(file,'This field requred')
  e.preventDefault()
}else {
  setSuccess(file)
}

  })
</script>
