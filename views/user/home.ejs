<%- include('../layout/start') %>

<%- include('../layout/navbar',{x}) %>

<section class="hero">
    <div class="hero__slider owl-carousel">
        <% banner.forEach((value)=>{%>

   
        <div class="hero__items set-bg" data-setbg="product/<%=value.image %>">
           <img src="" alt="">
            <div class="container">
                <div class="row">
                    <div class="col-xl-5 col-lg-7 col-md-8">
                        <div class="hero__text">
                            <h6>Summer Collection</h6>
                            <h2><%= value.title1 %></h2>
                            <p><%= value.description %></p>
                            <a href="/shopping" class="primary-btn">Shop now <span class="arrow_right"></span></a>
                            <div class="hero__social">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%  })%>
      
    </div>
</section>
<!-- Hero Section End -->


   <!-- Banner Section Begin -->
   <section class="banner spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 offset-lg-4">
                <div class="banner__item">
                    <div class="banner__item__pic">
                        <div class="d-flex justify-content-center"  style="width: 350px; height: 350px;">
                        <img class="radius img-fluid" src="product/<%=banner[0].semibanner[0].image[0]  %>" alt="">
                    </div>
                    </div>
                    <div class="banner__item__text">
                        <h2><%=banner[0].semibanner[0].title1 %></h2>
                        <a href="/shopping">Shop now</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="banner__item banner__item--middle">
                    <div style="z-index: 100;" class="banner__item__pic">
                        <div class=" d-flex justify-content-center " style="width: 350px; height: 350px;">
                            <img class="img-fluid radius" src="product/<%=banner[0].semibanner[0].image[1]  %>" alt="">
                        </div>
                    </div>
                    <div class="banner__item__text">
                        <h2><%=banner[0].semibanner[0].title2  %></h2>
                        <a href="/shopping">Shop now</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="banner__item banner__item--last">
                    <div class="banner__item__pic">
                        <div class="d-flex justify-content-center " style="width: 350px; height: 350px;">
                            <img class="radius img-fluid" src="product/<%=banner[0].semibanner[0].image[2]  %>" alt="">
                        </div>
                    </div>
                    <div class="banner__item__text">
                        <h2><%=banner[0].semibanner[0].title3 %></h2>
                        <a href="/shopping">Shop now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Banner Section End -->
